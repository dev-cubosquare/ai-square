---
import { ThemeToggle } from "./ThemeToggle";
---

<header
  class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center space-x-3 hover:opacity-80 transition-opacity"
      >
        <img src="/logo.png" alt="AI Square Logo" class="h-10 w-10" />
        <span class="text-xl font-bold" style="color: #6bb02a;">
          AI Square
        </span>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <a
          href="/"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          Home
        </a>
        <a
          href="/about"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          About
        </a>
        <a
          href="/products"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          Products
        </a>
        <a
          href="/case-studies"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          Case Studies
        </a>
        <a
          href="/blog"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          Blog
        </a>

        <a
          href="/contact"
          class="text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
        >
          Contact
        </a>
      </nav>

      <!-- Theme Toggle & CTA -->
      <div class="flex items-center space-x-4">
        <ThemeToggle client:load />
        <a
          href="/products"
          class="hidden sm:inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring disabled:opacity-50 disabled:pointer-events-none bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4"
        >
          Explore Products
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring disabled:opacity-50 disabled:pointer-events-none hover:bg-accent hover:text-accent-foreground h-9 w-9"
        id="mobile-menu-button"
        aria-label="Open menu"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border">
    <div class="container mx-auto px-4 py-4 space-y-3">
      <a
        href="/"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Home
      </a>
      <a
        href="/products"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Products
      </a>
      <a
        href="/case-studies"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Case Studies
      </a>
      <a
        href="/blog"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Blog
      </a>
      <a
        href="/about"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        About
      </a>
      <a
        href="/contact"
        class="block text-sm font-medium text-foreground/80 hover:text-foreground transition-colors"
      >
        Contact
      </a>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuButton && mobileMenu) {
    menuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
