---
import Layout from "@/layouts/Layout.astro";
import TestimonialsSection from "@/components/TestimonialsSection.astro";
import SimpleAvatar from "@/components/SimpleAvatar.astro";
import { blogPosts } from "@/data/blogs";
import { Badge } from "@/components/ui/badge";

// Sort by published date (newest first)
const sortedPosts = [...blogPosts].sort(
  (a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime()
);

// Separate featured and regular posts
const featuredPosts = sortedPosts.filter(post => post.featured);
const regularPosts = sortedPosts.filter(post => !post.featured);

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

---

<Layout
  title="Blog - AI Square | Insights, Guides, and Industry Trends"
  description="Stay updated with the latest insights on AI, automation, and technology. Expert guides, industry trends, and practical advice for leveraging AI in business."
>
  <!-- Hero Section -->
  <section class="py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-primary/10 via-accent/5 to-background">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center space-y-6">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
          AI Square <span
            class="bg-gradient-to-r from-accent via-primary to-accent bg-clip-text text-transparent"
          >Blog</span>
        </h1>
        <p class="text-lg sm:text-xl text-muted-foreground max-w-2xl mx-auto">
          Expert insights, practical guides, and the latest trends in AI and automation.
          Learn how to transform your business with cutting-edge technology.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  {featuredPosts.length > 0 && (
    <section class="py-16 sm:py-20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold mb-8">Featured Articles</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {featuredPosts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group block bg-card border border-border rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300"
            >
              {/* Cover Image Placeholder */}
              <div class="h-64 bg-gradient-to-br from-primary/20 via-accent/10 to-background flex items-center justify-center">
                <div class="text-6xl font-bold text-primary/20">
                  {post.title.split(' ').slice(0, 2).map(word => word[0]).join('')}
                </div>
              </div>

              {/* Content */}
              <div class="p-6 space-y-4">
                {/* Category Badge */}
                <Badge variant="secondary" className="text-xs">
                  {post.category}
                </Badge>

                {/* Title */}
                <h3 class="text-2xl font-semibold group-hover:text-primary transition-colors line-clamp-2">
                  {post.title}
                </h3>

                {/* Excerpt */}
                <p class="text-muted-foreground line-clamp-2">
                  {post.excerpt}
                </p>

                {/* Author & Meta */}
                <div class="flex items-center justify-between pt-4">
                  <div class="flex items-center gap-3">
                    <SimpleAvatar name={post.author.name} avatar={post.author.avatar} size="md" />
                    <div>
                      <div class="text-sm font-medium">{post.author.name}</div>
                      {post.author.role && (
                        <div class="text-xs text-muted-foreground">{post.author.role}</div>
                      )}
                    </div>
                  </div>
                  <div class="flex items-center gap-4 text-sm text-muted-foreground">
                    <span>{formatDate(post.publishedAt)}</span>
                    <span>{post.readingTime} min read</span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Posts Section -->
  <section class="py-16 sm:py-20 bg-muted/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8">Latest Posts</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {regularPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="group block bg-card border border-border rounded-lg overflow-hidden hover:shadow-xl transition-all duration-300"
          >
            {/* Cover Image Placeholder */}
            <div class="h-48 bg-gradient-to-br from-primary/15 via-accent/8 to-background flex items-center justify-center">
              <div class="text-4xl font-bold text-primary/20">
                {post.title.split(' ').slice(0, 2).map(word => word[0]).join('')}
              </div>
            </div>

            {/* Content */}
            <div class="p-6 space-y-3">
              {/* Category Badge */}
              <Badge variant="secondary" className="text-xs">
                {post.category}
              </Badge>

              {/* Title */}
              <h3 class="text-xl font-semibold group-hover:text-primary transition-colors line-clamp-2">
                {post.title}
              </h3>

              {/* Excerpt */}
              <p class="text-sm text-muted-foreground line-clamp-3">
                {post.excerpt}
              </p>

              {/* Meta */}
              <div class="flex items-center justify-between pt-3 text-xs text-muted-foreground">
                <span>{post.author.name}</span>
                <div class="flex items-center gap-3">
                  <span>{formatDate(post.publishedAt)}</span>
                  <span>{post.readingTime} min</span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <TestimonialsSection
    title="What Our Customers Say"
    description="See how businesses are achieving remarkable results with AI Square's products."
  />

  <!-- Newsletter CTA -->
  <section class="py-16 sm:py-20 lg:py-24 bg-gradient-to-br from-primary/10 via-accent/5 to-background">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto text-center space-y-6">
        <h2 class="text-3xl sm:text-4xl font-bold tracking-tight">
          Stay Updated with AI Insights
        </h2>
        <p class="text-lg text-muted-foreground">
          Get the latest articles, guides, and industry news delivered to your inbox.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-md mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            class="w-full px-4 py-2 rounded-md border border-input bg-background focus:outline-none focus:ring-2 focus:ring-ring"
          />
          <button
            class="w-full sm:w-auto inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring disabled:opacity-50 disabled:pointer-events-none bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-6 whitespace-nowrap"
          >
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>
